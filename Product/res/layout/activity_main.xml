<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
    <EditText
        android:id="@+id/candy_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/candy_name"
        android:layout_below="@+id/candy_name"
        android:ems="10" />
    
    <EditText
        android:id="@+id/candy_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/candy_brand"
        android:layout_below="@+id/candy_brand"
        android:ems="10" />
    
    <EditText
        android:id="@+id/candy_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/candy_type"
        android:layout_below="@+id/candy_type"
        android:ems="10" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/candy_price"
        android:layout_below="@+id/candy_price"
        android:layout_marginTop="38dp"
        android:text="Submit" />

    <Button
        android:id="@+id/get_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/candy_price"
        android:layout_alignTop="@+id/submit_button"
        android:layout_marginRight="16dp"
        android:text="Get" />

    <EditText
        android:id="@+id/candy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="18dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/candy_price"
        android:layout_alignLeft="@+id/textBrand"
        android:text="Type" />

    <TextView
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submit_button"
        android:layout_alignLeft="@+id/textType"
        android:text="Price" />

    <TextView
        android:id="@+id/textBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/candy_type"
        android:layout_alignLeft="@+id/textName"
        android:text="Brand" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/candy_brand"
        android:layout_toLeftOf="@+id/candy_brand"
        android:text="Name" />

    <Gallery
        android:id="@+id/gallery1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textPrice"
        android:layout_below="@+id/submit_button"
        android:layout_marginTop="78dp" />
    
</RelativeLayout>